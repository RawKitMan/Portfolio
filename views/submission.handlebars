<div id='content' class='flex-1 mx-auto p-8'>
    <form class="w-full max-w-md">
        <div class="flex flex-wrap -mx-3 mb-6">

            <div class="w-full px-3 mb-6 md:mb-0">
                <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="project-name">
                    Project name
                </label>
                <input
                    class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
                    id="project-name" type="text" placeholder="Project Name">
            </div>
            <div class="w-full px-3 mb-6 md:mb-0">
                <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="project-url">
                    App URL
                </label>
                <input
                    class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
                    id="project-url" type="text" placeholder="App URL">
            </div>
            <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="github-url">
                    GitHub URL
                </label>
                <input
                    class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-grey"
                    id="github-url" type="text" placeholder="Github URL">
            </div>
        </div>

        <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="image">
                    Project Image
                </label>
                <input
                    class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-grey"
                    id="image" type="text" placeholder="Image Link">
            </div>
            <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="image-description">
                    Image Description
                </label>
                <input
                    class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-grey"
                    id="image-description" type="text" placeholder="Image Description">
            </div>
        </div>

        <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="description">
            Description
        </label>
        <div class="md:flex-1 mt-2 mb:mt-0 md:px-3">
            <textarea id="description" class="w-full shadow-inner p-4 border-0" placeholder="Description"
                rows="8"></textarea>
        </div>

        <button id="submit-button"class="bg-blue hover:bg-blue-light text-white mt-2 font-bold py-2 px-4 border-b-4 border-blue-dark hover:border-blue rounded">
            Submit
        </button>
    </form>
</div>