<div id='content' class='flex-1 mx-auto container bg-white mb-3'>
    <h2 class="text-center project-text name myproject mt-5">My Projects</h2>
    {{#each dbProject}}
    <div class="mt-5 border-red-500 border-solid border-8 bg-grey-400 md:flex whitespace-normal">
        <div class="sm: flex-shrink-0 md:flex-shrink-0 p-0">
            <img class="project-image" src={{image_link}} alt={{image_description}}>
        </div>
        <div class= "whitespace-normal break-words">
            <ul class=" mt-4 sm:mt-0 sm:ml-2 md:mt-0 md:ml-2 ">
                <li class="mt-3 project-text"><strong>Project name:</strong> {{project_name}}</li>
                <li class="mt-3 project-text"><strong>Project URL:</strong> <a href={{project_url}}
                        target="_blank">{{project_url}}</a></li>
                <li class="mt-3 project-text"><strong>GitHub URL:</strong> <a href={{github_url}}
                        target="_blank">{{github_url}}</a></li>
                <li class="mt-3 mb-2 project-text"><strong>Description:</strong> {{project_description}}</li>
                {{!-- <li><button
                    class="bg-red-400 hover:bg-red-600 text-white mt-3 mb-3 font-bold py-2 px-4 border-b-4 border-red-600 hover:border-red-800 rounded delete-button"
                    button-index={{id}}>
                    Delete
                </button></li> --}}
            </ul>
        </div>
    </div>
    {{/each}}
</div>