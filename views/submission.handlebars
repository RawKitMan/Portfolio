<div id='content' class='flex-1 mx-auto p-8'>
    <form class="w-full max-w-md">
        <div class="flex flex-wrap -mx-3 mb-3">
            <div class="w-full px-3 mb-6 md:mb-0">
                <label class="block uppercase tracking-wide text-grey-800 text-xs font-bold mb-2" for="project-name">
                    Project name
                </label>
                <input
                    class="appearance-none block w-full bg-grey-200 text-grey-800 border border-red-500 rounded py-3 px-4 mb-3 leading-tighter focus:outline-none focus:bg-white"
                    id="project-name" type="text" placeholder="Project Name">
            </div>
            <div class="w-full px-3 mb-6 md:mb-0">
                <label class="block uppercase tracking-wider text-grey-800 text-xs font-bold mb-2" for="project-url">
                    App URL
                </label>
                <input
                    class="appearance-none block w-full bg-grey-200 text-grey-800 border border-red rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
                    id="project-url" type="text" placeholder="App URL">
            </div>
            <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-grey-800 text-xs font-bold mb-2" for="github-url">
                    GitHub URL
                </label>
                <input
                    class="appearance-none block w-full bg-grey-200 text-grey-800 border border-grey-200 rounded py-3 px-4 leading-tighter focus:outline-none focus:bg-white"
                    id="github-url" type="text" placeholder="Github URL">
            </div>
            <div class="w-full px-3 mt-3">
                <label class="block uppercase tracking-wide text-grey-800 text-xs font-bold mb-2" for="image">
                    Project Image
                </label>
                <input
                    class="appearance-none block w-full bg-grey-200 text-grey-800 border border-grey-200 rounded py-3 px-4 mb-3 leading-tighter focus:outline-none focus:bg-white"
                    id="image" type="text" placeholder="Image Link">
            </div>
            <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-grey-800 text-xs font-bold mb-2" for="image-description">
                    Image Description
                </label>
                <textarea
                    class="appearance-none block w-full bg-grey-200 text-grey-800 border border-grey-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
                    id="image-description" placeholder="Image Description"></textarea>
            </div>
            <div class="w-full px-3">
                <label class="block uppercase tracking-wider text-grey-800 text-xs font-bold mb-2" for="description">
                    Description
                </label>
                <textarea id="description" class="w-full p-4 border border-grey-200 rounded focus:outline-none" placeholder="Description"
                    rows="5"></textarea>
            </div>
        </div>

        <button id="submit-button"class="bg-blue-400 hover:bg-blue-600 text-white font-bold mt-2 py-2 px-4 border-blue-500 hover:border-blue rounded">
            Submit
        </button>
    </form>
</div>